<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.home.product_by_id.ProductByIdLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <androidx.cardview.widget.CardView
        android:id="@+id/card_product_by_id"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        >

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/productImageViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_product_by_id"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Nike krosovka"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:textColor="@color/black"
        />

        <ImageView
            android:id="@+id/btn_save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_heart_outline"
            app:layout_constraintTop_toBottomOf="@id/card_product_by_id"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            />

    <TextView
        android:id="@+id/product_magazin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Nike shop"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="32dp"
        />

    <TextView
        android:id="@+id/price_by_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_magazin_name"
        app:layout_constraintStart_toStartOf="parent"
        android:text="245 000"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:textColor="#47B881"
        />

    <TextView
        android:id="@+id/text_sum_by_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_magazin_name"
        app:layout_constraintStart_toEndOf="@id/price_by_id"
        android:text="sum"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textColor="#47B881"
        />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_sum_by_id"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Описание"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        />

    <View
        android:id="@+id/view_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#BDAEAE"
        app:layout_constraintTop_toTopOf="@id/text_description"
        app:layout_constraintStart_toEndOf="@id/text_description"
        app:layout_constraintBottom_toBottomOf="@id/text_description"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:id="@+id/description_by_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_description"
        app:layout_constraintStart_toStartOf="parent"
        android:text="description"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/about_shop_by_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/description_by_id"
        app:layout_constraintStart_toStartOf="parent"
        android:text="О магазине"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        />

    <View
        android:id="@+id/view_separator_2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#BDAEAE"
        app:layout_constraintTop_toTopOf="@id/about_shop_by_id"
        app:layout_constraintStart_toEndOf="@id/about_shop_by_id"
        app:layout_constraintBottom_toBottomOf="@id/about_shop_by_id"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:id="@+id/shop_name_by_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/about_shop_by_id"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Nike shop"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/shop_adres_by_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shop_name_by_id"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Adres"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/quantity_count_by_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shop_adres_by_id"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Количество"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        />

    <View
        android:id="@+id/view_separator_3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#BDAEAE"
        app:layout_constraintTop_toTopOf="@id/quantity_count_by_id"
        app:layout_constraintStart_toEndOf="@id/quantity_count_by_id"
        app:layout_constraintBottom_toBottomOf="@id/quantity_count_by_id"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        />
    
    <androidx.cardview.widget.CardView
        android:id="@+id/card_schetchik_by_id"
        android:layout_width="120dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/quantity_count_by_id"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/product_quantity"
            >

            <TextView
                android:id="@+id/btn_aliw_by_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="-"
                android:textSize="24sp"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                />


            <TextView
                android:id="@+id/schetchik_by_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="0"
                android:textSize="24sp"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/btn_qosiw_by_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="+"
                android:textSize="24sp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_separator_3"
        app:layout_constraintStart_toEndOf="@id/card_schetchik_by_id"
        android:text="В наличии "
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:textColor="#47B881"
        />

    <TextView
        android:id="@+id/product_quantity_by_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_separator_3"
        app:layout_constraintStart_toEndOf="@id/text_product_quantity"
        android:text="8"
        android:layout_marginTop="40dp"
        android:textColor="#47B881"
        />

    <TextView
        android:id="@+id/quantity_count_by_id_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_schetchik_by_id"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Количество"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        />

    <View
        android:id="@+id/view_separator_4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#BDAEAE"
        app:layout_constraintTop_toTopOf="@id/quantity_count_by_id_2"
        app:layout_constraintStart_toEndOf="@id/quantity_count_by_id_2"
        app:layout_constraintBottom_toBottomOf="@id/quantity_count_by_id_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_add_to_card"
            android:layout_width="140dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/quantity_count_by_id_2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#47B881"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to card"
                android:textColor="@color/white"
                android:layout_gravity="center"
                />


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/btn_buy"
            android:layout_width="140dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/quantity_count_by_id_2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/product_quantity"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy in 1 click"
                    android:textColor="#47B881"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>