<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_8"
    android:elevation="@dimen/_4dp"
    app:cardCornerRadius="@dimen/_12">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/_8">
        <ImageView
            android:id="@+id/iv_category"
            android:layout_width="@dimen/_40"
            android:layout_height="@dimen/_40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_setting"
            android:layout_marginTop="@dimen/_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_category"
            app:layout_constraintTop_toBottomOf="@id/iv_category"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:textSize="@dimen/_14"
            android:layout_marginVertical="@dimen/_8"
            tools:ignore="SpUsage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>