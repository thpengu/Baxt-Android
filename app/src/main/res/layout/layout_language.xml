<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:background="@drawable/green_circle"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Til saylaÅ„"
        android:textSize="@dimen/_22"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        android:layout_margin="@dimen/_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="SpUsage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="6"
        android:layout_margin="@dimen/_16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_en"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/english"
            android:textSize="@dimen/_16"
            android:textColor="@color/black"
            android:gravity="center|start"
            android:background="@drawable/bg_lang"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/_16"/>
        <TextView
            android:id="@+id/tv_kaa"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/karakalpak"
            android:textSize="@dimen/_16"
            android:textColor="@color/black"
            android:gravity="center|start"
            android:background="@drawable/bg_lang"
            android:layout_marginTop="@dimen/_16"
            android:padding="@dimen/_16"/>
        <TextView
            android:id="@+id/tv_ru"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/russian"
            android:textSize="@dimen/_16"
            android:textColor="@color/black"
            android:gravity="center|start"
            android:background="@drawable/bg_lang"
            android:layout_marginTop="@dimen/_16"
            android:padding="@dimen/_16"
            tools:ignore="SpUsage" />
        <TextView
            android:id="@+id/tv_uz"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/uzbek"
            android:textSize="@dimen/_16"
            android:textColor="@color/black"
            android:gravity="center|start"
            android:background="@drawable/bg_lang"
            android:layout_marginTop="@dimen/_16"
            android:padding="@dimen/_16"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>